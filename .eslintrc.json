{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "xo"],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["src/**/*.{ts,tsx,js,jsx,cjs}"],
			"rules": {
				"arrow-parens": "off",
				"quotes": "off",
				"jsx-quotes": "off",
				"@typescript-eslint/quotes": "off",
				"object-curly-spacing": "off",
				"@typescript-eslint/object-curly-spacing": "off",
				"@typescript-eslint/comma-dangle": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"ignorePatterns": ["vite-env.d.ts"],
	"settings": {
		"react": {
			"fragment": "Fragment",
			"version": "detect"
		}
	}
}
